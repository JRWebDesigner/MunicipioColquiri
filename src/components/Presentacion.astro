<div class="relative h-[70vh] w-full flex justify-center items-center bg-black text-white font-bold text-4xl md:text-[5vw] text-center z-20">
    <h1 class="z-10">
        Bienvenido al Municipio de <br> <br> Colquiri
    </h1>
    <img class="Images absolute w-full h-full z-0 object-cover opacity-30" src="/FotosGamp/imagen2.jpg" alt="">
</div>
<style>
    div{
        transition: 2s all;
        animation:ease-out 1s zoom;
    }
    @keyframes zoom {
        0%{
            transform: scale(.6);
        }
        100%{
            transform: scale(1)
        }
    }
</style>
<script>
    import ImagesJSON from './Image.json'
    const Images=document.querySelector('.Images');
    let i=1
    setInterval(() => {
        if(i==ImagesJSON.length) i=0
            Images.attributes[1].nodeValue=`${ImagesJSON[i].img}`
        i++
    }, 2000);
</script>