---
import Layout from "../layouts/Layout.astro";
import Banner from "../components/Banner.astro";
---

<Layout title="Decretos Municipales">
    <Banner titulo="Decretos Municipales" imagen="/FotosGamp/Alcalde.jpg" />
    <div class="my-10 hidden md:block">
        <div class="grid grid-cols-4 border-b-2 border-t-2 border-black">
            <div
                class="flex justify-center items-center border-r-2 border-black"
            >
                <span class="mx-auto">Nº</span>
            </div>
            <div
                class="flex justify-center items-center border-r-2 border-black"
            >
                <span>Fecha</span>
            </div>
            <div
                class="flex justify-center items-center border-r-2 border-black"
            >
                <span>Descripcion</span>
            </div>
            <div class="flex justify-center items-center">
                <span>Descargar</span>
            </div>
        </div>
        <div class="comp grid grid-cols-4 border-b-2 border-t-2 border-black">
        </div>
    </div>
    <div class="my-7 md:hidden">
        <div
            class="mobile border-2 border-gray-300 rounded-xl p-2 mx-auto flex w-[80%] justify-center items-center"
        >
        </div>
    </div>
</Layout>
<script>
    const comp = document.querySelector(".comp");
    const mobile = document.querySelector(".mobile");
    fetch("https://adminicstracion-colquiri-nzag.vercel.app/dm")
        .then((res) => res.json())
        .then((dm) => {
            const dmDates = dm
                .map((dm) => {
                    return `
                <div
                    class="flex justify-center items-center border-r-2 border-t-2  border-gray-300"
                >
                        ${dm.nro}
                </div>
                <div
                    class="flex justify-center items-center border-r-2 border-t-2  border-gray-300"
                >
                    ${dm.fecha}
                </div>
                <div
                    class="flex justify-center items-center border-r-2 border-t-2  border-gray-300"
                >
                    ${dm.descripcion}
                </div>
                <div class="flex justify-center items-center border-t-2 border-gray-300 p-2">
                    <a 
                       class="flex justify-center items-center w-full h-full"
                       href="${dm.url}" target="_blanck"
                    > 
                        <img class="w-[25%]" src="pdf.png" alt="" />
                    </a>
                </div>
            </div>
                    `;
                })
                .join("");
            comp.innerHTML = dmDates;
        });
    fetch("https://adminicstracion-colquiri-nzag.vercel.app/dm")
        .then((res) => res.json())
        .then((data) => {
            const dmDatesMobile = data.map((dm) => {
                return `
                     <div class="flex flex-col">
                <span>Nº${dm.nro}</span>
                <small>${dm.fecha}</small>
                  <p>
                    ${dm.descripcion}
                </p>
            </div>
            <a
                href="${dm.url}"
                target="_blank"
            >
                <img class="w-auto h-[20vw]" src="pdf.png" alt="" />
            </a>
                `;
            });
            mobile.innerHTML = dmDatesMobile;
        });
</script>
