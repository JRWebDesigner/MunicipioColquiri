---
import Layout from "../../layouts/Layout.astro";
import Banner from "../../components/Banner.astro";
---
<Layout title="Secretaria Tecnica">
    <Banner
    imagen="/FotosGamp/imagen2.jpg"
        titulo="Secretaria Tecnica"
    />
    <div class="w-[90%] mx-auto my-10">
        <ul class="flex m-auto items-center flex-col gap-10 text-lg md:text-2xl font-semibold">
            <div class="flex flex-col gap-10">
                <li>DIRECCIÓN GENERAL DE ASUNTOS JURÍDICOS</li>
                <ul>
                    <li>DIRECCIÓN GENERAL DE OBRAS</li>
                    <div class="ml-10">
                        <ul>
                            <li>UNIDAD DE CONTRABILIDAD</li>
                            <div class="ml-10">
                                <li>TÉCNICO ELÉCTRICO</li>
                                <li>SUPERVISOR DE OBRAS I</li>
                                <li>SUPERVISOR DE OBRAS II</li>
                                <li>CHOFER ÁREA TÉCNICA</li>
                                <li>SUPERVISOR DE OBRAS III</li>
                                <li>ADMINISTRACION UMSAPAC</li>
                                <li>ADMINISTRACION DE MAQUINARIA Y EQUIPO PESADO</li>
                            </div>
                        </ul>
                    </div>
                    <div class="ml-10">
                        <ul>
                            <li>
                                RESPONSABLE DE PATRIMONIO Y BIENES MUNICIPALES
                            </li>
                        </ul>
                        <div class="ml-10">
                            <li>ACTIVOS FIJOS Y ALMACENES</li>
                        </div>
                    </div>
                </ul>
                <li>UNIDAD PLANIFICACIÓN Y PRESUPUESTO</li>
                <li>RESPONSABLE DE CONTRATACIONES Y SISTEMAS</li>
                <li>COTIZACIONES Y COMPRAS MENORES</li>
                <ul>
                    <li>UNIDAD DE DESARROLLO HUMANO, CULTURA Y TURISMO</li>
                    <div class="ml-10">
                        <li>ADMINISTRADOR MUNICIPAL DE SALUD</li>
                        <li>PORTERIA Y LIMPIEZA EDIFICIO CENTRAL</li>
                    </div>
                </ul>
            </div>
        </ul>
    </div>
</Layout>
<style>
    ul {
        list-style: circle;
    }
</style>
